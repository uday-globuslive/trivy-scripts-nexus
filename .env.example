# Nexus Repository Configuration for SBOM Conversion Scripts
NEXUS_URL=http://10.11.53.12:8081
NEXUS_USERNAME=sv-sbom
NEXUS_PASSWORD=sbom@sbom

# Output Configuration
OUTPUT_DIR=./vulnerability_reports

# Repository Filtering (comma-separated list of repository names to scan)
# Leave empty or comment out to scan all repositories
# Example: REPOSITORIES_TO_SCAN=maven-central,npm-proxy,docker-hosted
REPOSITORIES_TO_SCAN=

# Debug Configuration
DEBUG_MODE=true
DEBUG_LOG_LEVEL=DEBUG
DEBUG_LOG_FILE=true
DEBUG_TRIVY_COMMANDS=true
DEBUG_HTTP_REQUESTS=true

# Report Retention Configuration
RETAIN_INDIVIDUAL_REPORTS=true

# Performance Configuration
# Skip pre-scan component counting to reduce startup time (saves 10-30 minutes)
# true = Skip duplicate component retrieval, start scanning immediately (recommended)
# false = Perform pre-scan analysis with component counts (slower startup)
SKIP_PRE_SCAN_COMPONENT_COUNT=true

# Date-based Artifact Filtering
# Filter artifacts by upload date - scan only artifacts uploaded from this date onwards
# Format: YYYY-MM-DD (e.g., 2025-09-10 for September 10, 2025)
# Leave empty or comment out to scan all artifacts regardless of upload date
# Example: SCAN_ARTIFACTS_FROM_DATE=2025-09-01
SCAN_ARTIFACTS_FROM_DATE=